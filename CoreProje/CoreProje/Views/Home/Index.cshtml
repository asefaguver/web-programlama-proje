@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using CoreProje.Models
@model IEnumerable<CoreProje.Models.Blog>

@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/style.css" rel="stylesheet">

<!-- hero-section start -->
<div class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                <div class="hero-section-caption pinside40">
                    <h1 class="hero-title">@localizer["Discover"]</h1>
                    <a href="/Home/Tours" class="btn btn-primary ">@localizer["viewBlogs"]</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- hero-section close -->

<div class="space-medium">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="section-title text-center">
                    <h1>@localizer["TopDestinations"]</h1>
                    @*<h2>@ViewData["TopDestinations"]</h2>*@
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                @if (item.BlogId <= 3)
                {
                    <!-- destination-one-start -->
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <div class="destination-img">
                            <a a asp-action="Post" asp-route-id="@item.BlogId" class="imghover">
                                <img src="/images/@item.Resim" alt "Tour and Travel - Responsive Website Template" class="img-responsive">
                            </a>
                        </div>
                        <div class="destination-content">
                            <h3>
                                <a asp-action="Post" asp-route-id="@item.BlogId" class="destination-title">
                                    @item.Baslik
                                </a>
                            </h3>
                        </div>
                    </div>
                    <!-- destination-one-close -->

                }
            }

        </div>
    </div>
</div>