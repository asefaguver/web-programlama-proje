@model CoreProje.Models.Blog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">
        <h2>Create Blog</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="BlogId" class="control-label"></label>
                        <input asp-for="BlogId" class="form-control" />
                        <span asp-validation-for="BlogId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KategoriId" class="control-label"></label>
                        <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.KategoriId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Baslik" class="control-label"></label>
                        <input asp-for="Baslik" class="form-control" />
                        <span asp-validation-for="Baslik" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdminId" class="control-label"></label>
                        <select asp-for="AdminId" class="form-control" asp-items="ViewBag.AdminId"></select>
                    </div>
                    
                </form>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Icerik" class="control-label"></label>
                    <textarea asp-for="Icerik" class="form-control" rows="6" style="margin: 0px -2px 10px 0px; width: 700px; height: 250px;"></textarea>
                    <span asp-validation-for="Icerik" class="text-danger"></span>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

    </div>


